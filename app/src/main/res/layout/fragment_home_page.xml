<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".homePage"
        android:id="@+id/fragment_home_page1">

    <ImageView
            android:id="@+id/neuroflexLogoHomePage"
            android:layout_width="360dp"
            android:layout_height="140dp"
            android:src="@drawable/neuroflex_logo"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/todo"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.608"
            app:layout_constraintBottom_toTopOf="@+id/signInTitle"/>


    <LinearLayout
            android:layout_width="360dp"
            android:layout_height="250dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="160dp">

        <com.jjoe64.graphview.GraphView
                android:id="@+id/graphModel"
                android:layout_width="match_parent"
                android:layout_height="250dp" />


    </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="371dp"
                android:layout_height="550dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="430dp">


            <TextView
                    android:id="@+id/textHarmfulAngle"
                    android:layout_width="64dp"
                    android:layout_height="33dp"
                    android:text="@{homePage.harmfulAngleDuration}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0.129"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.423"
                    app:layout_constraintBottom_toBottomOf="parent" />


            <TextView
                    android:id="@+id/textHarmfulAngleInSeconds"
                    android:layout_width="104dp"
                    android:layout_height="29dp"
                    android:text="seconds"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0.136"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.726"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                    android:id="@+id/standing_text_id"
                    android:layout_height="35dp"
                    android:layout_width="286dp"
                    android:textColor="@color/black"
                    android:text="Harmful Angle Duration:"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.294"
                    app:layout_constraintBottom_toTopOf="@+id/textHarmfulAngle"
                    app:layout_constraintVertical_bias="0.187" />

            <ImageView
                    android:layout_width="68dp"
                    android:layout_height="96dp"
                    android:src="@drawable/lifting_session"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.138"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.09" />

            <TextView
                    android:layout_width="240dp"
                    android:layout_height="29dp"
                    android:text="Harmful Angle Beyond:"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textHarmfulAngle"
                    android:layout_marginTop="52dp"
                    app:layout_constraintHorizontal_bias="0.191"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:id="@+id/textView" />

            <TextView
                    android:id="@+id/harmfulAngleNew"
                    android:layout_width="61dp"
                    android:layout_height="29dp"
                    tools:ignore="MissingConstraints"
                    android:textColor="#FF0000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textHarmfulAngleInSeconds"
                    app:layout_constraintHorizontal_bias="0.761"
                    app:layout_constraintVertical_bias="0.767"
                    android:layout_marginBottom="352dp" />

            <TextView
                    android:id="@+id/maxAngleTextBox"
                    android:text="Maximum Angle:"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_width="176dp"
                    android:layout_height="25dp"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.128"
                    app:layout_constraintVertical_bias="0.369" />

            <TextView
                    android:text="Minimum Angle:"
                    android:layout_width="173dp"
                    android:layout_height="27dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/minAngleTextBox"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.126"
                    app:layout_constraintVertical_bias="0.439" />

            <TextView
                    android:layout_width="78dp"
                    android:layout_height="24dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/minAngleValue"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.631"
                    app:layout_constraintVertical_bias="0.442" />

            <TextView

                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/maxAngleValue"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.635"
                    app:layout_constraintVertical_bias="0.37" />

            <TextView
                    android:text="degrees"
                    android:layout_width="73dp"
                    android:layout_height="22dp"
                    android:id="@+id/degreeText1"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.996"
                    app:layout_constraintVertical_bias="0.303" />

            <TextView
                    android:text="degrees"
                    android:layout_width="77dp"
                    android:layout_height="21dp"
                    android:id="@+id/degreeText2"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.853"
                    app:layout_constraintVertical_bias="0.376" />

            <TextView
                    android:text="degrees"
                    android:layout_width="65dp"
                    android:layout_height="24dp"
                    android:id="@+id/degreeText3"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.82"
                    app:layout_constraintVertical_bias="0.442" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</ScrollView>




