<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">


<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".homePage"
        android:id="@+id/fragment_home_page1">

    <ImageView
            android:id="@+id/neuroflexLogoHomePage"
            android:layout_width="360dp"
            android:layout_height="140dp"
            android:src="@drawable/neuroflex_logo"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/todo"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.608"
            app:layout_constraintBottom_toTopOf="@+id/signInTitle"/>


    <LinearLayout
            android:layout_width="360dp"
            android:layout_height="250dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="160dp">

        <com.jjoe64.graphview.GraphView
                android:id="@+id/graphModel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="360dp"
            android:layout_height="550dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="430dp">


        <TextView
                android:id="@+id/standing_text_id"
                android:layout_height="31dp"
                android:layout_width="233dp"
                android:textColor="@color/black"
                android:text="Standing Session:"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.59" />

        <ImageView
                android:layout_width="68dp"
                android:layout_height="96dp"
                android:src="@drawable/standing_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintHorizontal_bias="0.0" />

        <Chronometer
                android:id="@+id/chronometerOne"
                android:layout_width="142dp"
                android:layout_height="55dp"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="60dp"
                app:layout_constraintHorizontal_bias="0.344" />

        <Button
                android:id="@+id/startbuttonTimerOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.275"
                app:layout_constraintTop_toBottomOf="@+id/chronometerOne"
                android:layout_marginTop="4dp"
                android:text="@string/startButton" />

        <Button
                android:id="@+id/stopbuttonTimerOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.669"
                app:layout_constraintTop_toBottomOf="@+id/chronometerOne"
                android:layout_marginTop="4dp"
                android:text="Stop" />

        <ImageView
                android:layout_width="68dp"
                android:layout_height="96dp"
                android:src="@drawable/lifting_session"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="232dp"
                app:layout_constraintHorizontal_bias="0.0" />

        <Chronometer
                android:id="@+id/chronometerTwo"
                android:layout_width="142dp"
                android:layout_height="55dp"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="272dp"
                app:layout_constraintHorizontal_bias="0.389" />

        <TextView
                android:id="@+id/lifting_text_id"
                android:layout_height="31dp"
                android:layout_width="233dp"
                android:textColor="@color/black"
                android:text="Lifting Session:"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="232dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.669" />

        <Button
                android:id="@+id/startbuttonTimerTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.275"
                app:layout_constraintTop_toBottomOf="@+id/chronometerTwo"
                android:layout_marginTop="4dp"
                android:text="@string/startButton" />


        <Button
                android:id="@+id/stopbuttonTimerTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.669"
                app:layout_constraintTop_toBottomOf="@+id/chronometerTwo"
                android:layout_marginTop="4dp"
                android:text="Stop" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</ScrollView>




